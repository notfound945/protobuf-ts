{
  "$schema": "https://turbo.build/schema.json",
  "extends": ["//"],
  "tasks": {
    "generate": {
      "dependsOn": ["^build"],
      "inputs": [
        "buf.gen.yaml",
        "../../buf.yaml",
        "../proto/**/*.proto",
        "../plugin/protobuf-ts.proto"
      ],
      "outputs": ["gen/**"]
    },
    "test": {
      "dependsOn": ["build"],
      "cache": false
    },
    "conformance": {
      "dependsOn": ["generate", "^build"],
      "cache": false
    }
  }
}
